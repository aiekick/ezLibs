{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo"
            }
        },
        {
            "name": "base-windows",
            "hidden": true,
            "inherits": "base",
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "base-linux",
            "hidden": true,
            "inherits": "base",
            "condition": {
                "type": "inList",
                "string": "${hostSystemName}",
                "list": [
                    "Linux",
                    "Darwin"
                ]
            }
        },
        {
            "name": "windows-msvc",
            "displayName": "msvc",
            "inherits": "base-windows",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "windows-clang",
            "displayName": "clang",
            "inherits": "base-windows",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl"
            }
        },
        {
            "name": "linux-gcc",
            "displayName": "gcc",
            "inherits": "base-linux",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "linux-clang",
            "displayName": "clang",
            "inherits": "base-linux",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "base",
            "hidden": true,
            "jobs": 8
        },
        {
            "name": "windows-msvc",
            "displayName": "msvc",
            "inherits": "base",
            "configurePreset": "windows-msvc"
        },
        {
            "name": "windows-clang",
            "displayName": "clang",
            "inherits": "base",
            "configurePreset": "windows-clang"
        },
        {
            "name": "linux-gcc",
            "displayName": "gcc",
            "inherits": "base",
            "configurePreset": "linux-gcc"
        }
    ],
    "testPresets": [
        {
            "name": "base",
            "hidden": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": true,
                "jobs": 12
            }
        },
        {
            "name": "windows-msvc",
            "displayName": "msvc",
            "inherits": "base",
            "configurePreset": "windows-msvc"
        },
        {
            "name": "windows-clang",
            "displayName": "clang",
            "inherits": "base",
            "configurePreset": "windows-clang"
        },
        {
            "name": "linux-gcc",
            "displayName": "gcc",
            "inherits": "base",
            "configurePreset": "linux-gcc"
        }
    ]
}